doi = {10.1002/evan.21332},
file = {:D$\backslash$:/mendeley/Levitis, Burger, Lackey - Evolutionary Anthropology - 2013 - The human post-fertile lifespan in comparative evolutionary context.pdf:pdf},
isbn = {1520-6505 (Electronic)$\backslash$r1060-1538 (Linking)},
