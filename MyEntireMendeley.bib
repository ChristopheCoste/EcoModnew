file = {:D$\backslash$:/mendeley/Fi{\'{e}}vet et al. - Frontiers in Genetics - 2018 - Heterosis Is a Systemic Property Emerging From Non-linear Genotype-Phenotype Relationship.pdf:pdf},
issn = {1664-8021},
journal = {Frontiers in Genetics},
keywords = {enzyme variability,genotype-phenotype map,heterosis,mathematical modeling,metabolic network,non-linear processes},
month = {may},
title = {{Heterosis Is a Systemic Property Emerging From Non-linear Genotype-Phenotype Relationships: Evidence From in Vitro Genetics and Computer Simulations}},
