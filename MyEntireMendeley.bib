author = {Stott, Iain and Townley, Stuart and Carslake, David and Hodgson, David J},
doi = {10.1111/j.2041-210X.2010.00032.x},
file = {:D$\backslash$:/mendeley/Stott et al. - Methods in Ecology and Evolution - 2010 - On reducibility and ergodicity of population projection matrix models.pdf:pdf},
