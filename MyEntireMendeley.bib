isbn = {0047-6374 (Print)$\backslash$r0047-6374 (Linking)},
issn = {00476374},
journal = {Mechanisms of Ageing and Development},
keywords = {Hormesis,Insulin-like signaling,Life extension,Oxidative damage,Senescence},
