journal = {Journal of Theoretical Biology},
keywords = {Evolution of aging,Fitness differential,Force of natural selection,Life history theory,Trade-offs},
number = {1},
pages = {176--181},
pmid = {24316386},
publisher = {Elsevier},
title = {{No senescence despite declining selection pressure: Hamilton's result in broader perspective}},
url = {http://dx.doi.org/10.1016/j.jtbi.2013.11.016},
volume = {347},
year = {2014}
}
