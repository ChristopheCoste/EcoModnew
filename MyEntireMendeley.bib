doi = {10.1890/02-0409},
file = {:D$\backslash$:/mendeley/Gaillard, Yoccoz - Ecology - 2003 - Temporal Variation in Survival of Mammals a Case of Environmental Canalization.pdf:pdf},
isbn = {0012-9658},
