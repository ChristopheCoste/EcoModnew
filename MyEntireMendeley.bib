pages = {214},
school = {Ecole Doctorale - Fronti{\`{e}}res du Vivant;Chaire - Mod{\'{e}}lisation Math{\'{e}}matique Et Biodiversit{\'{e}}; Universit{\'{e}} Sorbonne Paris Cit{\'{e}}, France},
title = {{The costs of reproduction in evolutionary demography: An application of Multitrait Population Projection Matrix models.}},
