author = {Platt, William J. and Evans, Gregory W. and Rathbun, Stephen L.},
doi = {10.1086/284803},
file = {:D$\backslash$:/mendeley/Platt, Evans, Rathbun - American Naturalist - 1988 - The population dynamics of a long-lived conifer (Pinus palustris).pdf:pdf},
