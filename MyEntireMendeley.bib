@article{Zwoinska2016,
abstract = {The evolution of learning can be constrained by trade-offs. As male and$\backslash$nfemale life histories often diverge, the relationship between learning$\backslash$nand fitness may differ between the sexes. However, because sexes share$\backslash$nmuch of their genome, intersexual genetic correlations can prevent males$\backslash$nand females from reaching their sex-specific optima resulting in$\backslash$nintralocus sexual conflict (IaSC). To investigate if IaSC constraints$\backslash$nsex-specific evolution of learning, we selected Caenorhabditis remanei$\backslash$nnematode females for increased or decreased olfactory learning$\backslash$nperformance and measured learning, life span (in mated and virgin$\backslash$nworms), reproduction, and locomotory activity in both sexes. Males from$\backslash$ndownward-selected female lines had higher locomotory activity and longer$\backslash$nvirgin life span but sired fewer progeny than males from upward-selected$\backslash$nfemale lines. In contrast, we found no effect of selection on female$\backslash$nreproduction and downward-selected females showed higher locomotory$\backslash$nactivity but lived shorter as virgins than upward-selected females.$\backslash$nStrikingly, selection on learning performance led to the reversal of$\backslash$nsexual dimorphism in virgin life span. We thus show sex-specific$\backslash$ntrade-offs between learning, reproduction, and life span. Our results$\backslash$nsupport the hypothesis that selection on learning performance can shape$\backslash$nthe evolution of sexually dimorphic life histories via sex-specific$\backslash$ngenetic correlations.},
